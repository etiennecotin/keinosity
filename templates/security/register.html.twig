{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                {#<img src="assets/images/logo.png" height="54" alt="Porto Admin" />#}
                <h1>Keinosity</h1>
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>{{ 'form.registration.register'|trans }}</h2>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group mb-lg">
                           {{ form_row(form.email) }}
                        </div>

                        <div class="form-group mb-lg">
                            {{ form_row(form.firstName) }}
                        </div>

                        <div class="form-group mb-lg">
                            {{ form_row(form.name) }}
                        </div>


                        <div class="form-group mb-lg">
                            {{ form_row(form.birthDay) }}
                        </div>

                        <div class="form-group mb-none">
                            <div class="row">
                                {{ form_errors(form.plainPassword.first) }}
                                {{ form_errors(form.plainPassword.second) }}
                                <div class="col-sm-6 mb-lg">
                                    {{ form_label(form.plainPassword.first) }}
                                    {#<input name="pwd" type="password" class="form-control input-lg" />#}
                                    {{ form_widget(form.plainPassword.first) }}
                                </div>
                                <div class="col-sm-6 mb-lg">
                                    {{ form_label(form.plainPassword.second) }}
                                    {#<input name="pwd_confirm" type="password" class="form-control input-lg" />#}
                                    {{ form_widget(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    {#<input id="AgreeTerms" name="agreeterms" type="checkbox"/>#}
                                    {{ form_widget(form.termsAccepted) }}
                                    {#<span style="display:inline-block">#}
                                        {#<a href="#">rules</a>#}
                                    {#</span>#}
                                    {#<label for="AgreeTerms">I agree with <a href="#">terms of use</a></label>#}
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary hidden-xs">{{ 'form.registration.signup'|trans }}</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">{{ 'form.registration.signup'|trans }}</button>
                            </div>
                        </div>

                        <span class="mt-lg mb-lg line-thru text-center text-uppercase">
								<span>or</span>
							</span>

                        {#<div class="mb-xs text-center">#}
                            {#<a class="btn btn-facebook mb-md ml-xs mr-xs">Connect with <i class="fa fa-facebook"></i></a>#}
                            {#<a class="btn btn-twitter mb-md ml-xs mr-xs">Connect with <i class="fa fa-twitter"></i></a>#}
                        {#</div>#}

                        <p class="text-center">Already have an account? <a href="{{ path('app_login') }}">{{ 'form.registration.login'|trans }}!</a>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

